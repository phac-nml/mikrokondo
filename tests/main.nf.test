                platform = "illumina"

                mash { mash_sketch = "https://github.com/phac-nml/mikrokondo/raw/integration-testing/tests/data/databases/campy-staph-ecoli.msh" }
                r_contaminants { mega_mm2_idx = "https://github.com/phac-nml/mikrokondo/raw/integration-testing/tests/data/databases/campy.mmi" }

                skip_bakta = true
                skip_staramr = true
                skip_mobrecon = true
                skip_checkm = true
                skip_raw_read_metrics = true
                skip_polishing = true
            }
            workflow {
                """
                // define inputs of the workflow here.
                """
            }
        }

        then {
            assert workflow.success
        }

    }

