nextflow_workflow {
    name "Test Workflow QC_ASSEMBLIES"
    script "subworkflows/local/qc_assemblies.nf"
    workflow "QC_ASSEMBLIES"
    tag "subworkflows"
    tag "qc_assemblies"

    test("Test qc_assemblies") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [id: "SAMPLE1"],
                    file("$baseDir/tests/data/sample1.fasta", checkIfExists: true),
                    file("$baseDir/tests/data/reads.fastq", checkIfExists: true)
                ])
                """
            }

            params {
                outdir = "qc_assemblies_test1"

                skip_checkm = true
                skip_mlst = true
            }
        }

        then {
            assert workflow.success

            snapshot(workflow.out).match()
        }
    }

    test("Test qc_assemblies smaller contig length") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [id: "SAMPLE1", single_end: true],
                    file("$baseDir/tests/data/sample1.fasta", checkIfExists: true),
                    []
                ])
                """
            }

            params {
                outdir = "qc_assemblies_test1"

                quast = ["min_contig_length": 2]

                skip_checkm = true
                skip_mlst = true
            }
        }

        then {
            assert workflow.success

            snapshot(workflow.out).match()
        }
    }
}