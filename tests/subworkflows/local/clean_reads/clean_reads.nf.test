nextflow_workflow {
    name "Test workflow QC_READS"
    script "subworkflows/local/clean_reads.nf"
    workflow "QC_READS"
    tag "subworkflow"
    tag "clean_reads"

    test("Test clean reads run without failure illumina") {
        tag "clean_illumina"

        when {
            workflow {
                """
                input[0] = Channel.of(
                    [
                        [id: "SAMPlE1",
                        hybrid: false,
                        sample: "SAMPLE1",
                        assembly: false,
                        downsampled: false,
                        single_end: false,
                        merge: false],
                        [
                            file("$baseDir/tests/data/reads/campy-staph1.fq.gz"),
                            file("$baseDir/tests/data/reads/campy-staph2.fq.gz")
                        ]
                    ])
                input[1] = "illumina"
                """
            }

            params {
                outdir = "$outputDir"
                min_reads = 1
                mash_sketch = "https://github.com/phac-nml/mikrokondo/raw/dev/tests/data/databases/campy-staph-ecoli.msh"
                mh_min_kmer = 1

                dehosting_idx = "https://github.com/phac-nml/mikrokondo/raw/dev/tests/data/databases/campy.mmi"

                kraken2_db = "$baseDir/tests/data/kraken2/test"


                max_memory = "2.GB"
                max_cpus = 1
            }

        }

        then {

            assert workflow.success
            assert path("$outputDir/Reads/FinalReads/SAMPLE1/SAMPlE1.final.R1.trimmed.reads.fastq.gz").exists()
            assert path("$outputDir/Reads/FinalReads/SAMPLE1/SAMPlE1.final.R2.trimmed.reads.fastq.gz").exists()
            assert path("$outputDir/Reads/Processing/Dehosting/SAMPlE1.deconned.R1.deconned.reads.fastq.gz").exists()
            assert path("$outputDir/Reads/Processing/Dehosting/SAMPlE1.deconned.R2.deconned.reads.fastq.gz").exists()
            assert path("$outputDir/Reads/Processing/Dehosting/Trimmed/FastP/SAMPlE1.fastp.R1.trimmed.reads.fastq.gz").exists()
            assert path("$outputDir/Reads/Processing/Dehosting/Trimmed/FastP/SAMPlE1.fastp.R2.trimmed.reads.fastq.gz").exists()
            assert path("$outputDir/Reads/Processing/Dehosting/Trimmed/MashSketches/SAMPlE1.mash.estimate.msh").exists()
            assert path("$outputDir/Reads/Quality/Trimmed/FastP/SAMPlE1.fastp.summary.html").exists()
            assert path("$outputDir/Reads/Quality/Trimmed/FastP/SAMPlE1.fastp.summary.json").exists()
            assert path("$outputDir/Reads/Quality/Trimmed/MashScreen/SAMPlE1.mash.screen.reads.screen.screen").exists()
            assert path("$outputDir/Reads/Processing/Dehosting/SAMPlE1.deconned.R1.deconned.reads.fastq.gz").linesGzip.size() == 496
            assert path("$outputDir/Reads/Processing/Dehosting/SAMPlE1.deconned.R2.deconned.reads.fastq.gz").linesGzip.size() == 496
            assert path("$outputDir/Reads/Processing/Dehosting/Trimmed/FastP/SAMPlE1.fastp.R1.trimmed.reads.fastq.gz").linesGzip.size() == 496
            assert path("$outputDir/Reads/Processing/Dehosting/Trimmed/FastP/SAMPlE1.fastp.R2.trimmed.reads.fastq.gz").linesGzip.size() == 496
            snapshot(workflow.out).match()

        }

    }

