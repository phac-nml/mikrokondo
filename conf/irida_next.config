/*
IRIDANext plugin configuration

*/


iridanext {
    enabled = true
    output {
        path = "${params.outdir}/iridanext.output.json.gz"
        overwrite = true
        validate = false
        files {
            idkey = "id"
            global = []
            samples = [
                "**/assembly/length_filtered_contigs/*_filtered.fasta.gz",
                "**/SummaryReport/*_flattened.json",
                ]
        }
        metadata {
            samples {
                flatten = true
                json {
                    path = "**/SummaryReport/final_report_flattened.json"
                }
            }
        }
    }
}
